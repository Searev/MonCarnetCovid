<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MonCarnetCovid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bleu_clair</item>
        <item name="colorPrimaryVariant">@color/bleu_sombre</item>
        <item name="colorPrimaryDark">@color/bleu_sombre_desature</item>

        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pourpre_clair</item>
        <item name="colorSecondaryVariant">@color/pourpre_median</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimarySurface">@color/white</item>
    </style>

    <style name="Theme.MonCarnetCovid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MonCarnetCovid.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>